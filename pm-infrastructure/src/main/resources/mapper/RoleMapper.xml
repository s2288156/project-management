<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pm.infrastructure.mapper.RoleMapper">


    <select id="listRoleByUid" resultType="String">
        select tr.role
        from t_role tr
                 left join t_user_role tur on tr.id = tur.role_id
            and tur.uid = #{uid}
    </select>
</mapper>
